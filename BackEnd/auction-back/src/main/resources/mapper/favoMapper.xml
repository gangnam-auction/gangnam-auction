<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gromit.auction_back.mypage.favorite.FavoDAO">
    <resultMap id="favoResultMap" type="com.gromit.auction_back.mypage.favorite.FavoDTO">
        <id property="userCode" column="user_code" />
        <result property="postId" column="postId" />
        <result property="title" column="title" />
        <result property="imageUrl" column="imageUrl" />
    </resultMap>

    <select id="getAllFavoList" resultMap="favoResultMap">
        SELECT
        b.title,
        b.postId,
        i.imageUrl
        FROM
        favorites b
        JOIN
        <!-- FROM 을 favorites 로 바꿔 (완료) -->
        <!-- JOIN 으로 (하는 중) -->
        users u ON b.userCode = u.userCode
        LEFT JOIN
        ImageUrl i ON b.postId = i.postId
        WHERE
        u.userCode = #{userCode}

    </select>

    <delete id="deleteFavoriteById" parameterType="int">
        DELETE FROM favorites
        WHERE userCode = #{userCode}
    </delete>

</mapper>